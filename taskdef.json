{
  "family": "productsapp-prod-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/productsapp-prod-task-execution-role",
  "taskRoleArn": "arn:aws:iam::<AWS_ACCOUNT_ID>:role/productsapp-prod-task-role",
  "containerDefinitions": [
    {
      "name": "productsapp-container",
      "image": "<IMAGE1_URI>",
      "portMappings": [
        {
          "containerPort": 8082,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/productsapp-prod",
          "awslogs-region": "<AWS_DEFAULT_REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "DB_HOST",
          "value": "<DB_HOST>"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "product-management"
        },
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "S3_BUCKET",
          "value": "<S3_BUCKET>"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "<AWS_DEFAULT_REGION>"
        }
      ],
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "/productsapp/prod/db/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/productsapp/prod/db/password"
        }
      ]
    }
  ]
}